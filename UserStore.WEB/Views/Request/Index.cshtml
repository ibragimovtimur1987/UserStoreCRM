@model PagedList.IPagedList<UserStore.Models.RequestViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
    @section Scripts{
        @Scripts.Render("~/bundles/requestView")
    }
    @*@Scripts.Render("~/bundles/js/datatables")
        @Styles.Render("~/bundles/css/datatables")*@
</head>
<body>
    <h2>Список заявок</h2>
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Тема</th>
                <th>Сообщение</th>
                <th>Почта клиента</th>
                <th>Прикрепленный файл</th>
                <th>Время создания</th>
                <th>Просмотрено</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Request in Model)
            {

            <tr>
                <td>@Request.Id</td>
                <td>@Request.Theme</td>
                <td>@Request.Message</td>
                <td>@Request.Email</td>
                <td>
                    @Html.ActionLink("Сачать файл", "Download",new { filepath = Request.AttachmentLink })
                </td>
                <td>@Request.Create</td>
                <td><input id="Scanned" checked="@Request.Scanned" type="checkbox" onclick="updateRequest(@Request.Id,this)" /></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
   
</body>
</html>