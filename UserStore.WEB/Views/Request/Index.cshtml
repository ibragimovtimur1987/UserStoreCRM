@model PagedList.IPagedList<UserStore.Models.RequestViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
    @Scripts.Render("~/bundles/js/datatables")
    @Styles.Render("~/bundles/css/datatables")
</head>
<body>
    <h2>Список заявок</h2>
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Тема</th>
                <th>Сообщение</th>
                <th>Почта клиента</th>
                <th>Прикрепленный файл</th>
                <th>Время создания</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Request in Model)
            {
            <tr>
                <td>@Request.Id</td>
                <td>@Request.Theme</td>
                <td>@Request.Message</td>
                <td>@Request.Email</td>
                <td>@Request.AttachmentLink</td>
                <td>@Request.Create</td>
                <td>@Html.CheckBoxFor(x=> Request.Scanned,
                  new Dictionary<string, object>{
                     {"id", "p1isCompleted"},
                     {"onclick","updateRequest.call(this)"},
                     {"data-role", "flipswitch"},
                     {"data-on-text", "complete"},
                     {"data-off-text", "incomplete"},
                     {"data-wrapper-class", "custom-size-flipswitch"}}))</td>
            </tr>
            }
        </tbody>
    </table>
    <br />
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
   
</body>
</html>